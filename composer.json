{
  "name": "facile-it/sentry-psr-log",
  "type": "library",
  "description": "PSR Logger for Sentry",
  "homepage": "https://github.com/facile-it/sentry-psr-log",
  "license": "MIT",
  "keywords": ["sentry", "raven", "log", "logs", "exception", "exceptions", "error", "errors", "psr", "psr3"],
  "authors": [
    {
      "name": "Thomas Vargiu",
      "email": "thomas.vargiu@facile.it"
    }
  ],
  "autoload": {
    "psr-4": {
      "Facile\\Sentry\\Log\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Facile\\Sentry\\LogTest\\": "tests/"
    }
  },
  "require": {
    "php": "^5.5 || ^7.0",
    "sentry/sentry": "^0.19",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "friendsofphp/php-cs-fixer": "^1.11"
  },
  "provide": {
    "psr/log-implementation": "1.0.0"
  },
  "scripts": {
    "test": ["@phpunit", "@phpcs"],
    "ci-test": [
      "@ci-phpunit",
      "@phpcs"
    ],
    "phpunit": "phpunit",
    "ci-phpunit": "phpunit --coverage-clover=coverage.clover",
    "phpcs": [
      "php-cs-fixer fix -v --diff --dry-run src/",
      "php-cs-fixer fix -v --diff --dry-run tests/"
    ],
    "phpcs-fix": [
      "php-cs-fixer fix -v --diff src/",
      "php-cs-fixer fix -v --diff tests/"
    ]
  }
}
